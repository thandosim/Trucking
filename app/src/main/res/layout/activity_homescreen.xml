<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truck_background"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".homescreen">

    <!-- Root LinearLayout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_account_circle_24"
            android:contentDescription="User profile image"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- First Row: Find Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Button: Find Trucks -->
            <Button
                android:id="@+id/find_trucks_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Trucks"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <!-- Button: Find Cargo -->
            <Button
                android:id="@+id/find_cargo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Cargo"
                android:padding="16dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Second Row: Update Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Button: Update Truck Location -->
            <Button
                android:id="@+id/update_truck_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="16dp"
                android:text="Update Truck Location" />

            <!-- Button: Update Cargo Location -->
            <Button
                android:id="@+id/update_cargo_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Cargo Location"
                android:padding="16dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Manage Account Button -->
        <Button
            android:id="@+id/manage_account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Account"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
