<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truck_background"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".homescreen">

    <!-- Root LinearLayout -->
    <!-- Serves as the main layout for the home screen.
         It has a vertical orientation to stack child components from top to bottom.
         The truck background drawable is applied for design consistency. -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image -->
        <!-- Displays a profile image or icon at the top of the screen.
             The content description ensures accessibility for users with assistive devices. -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_account_circle_24"
            android:contentDescription="User profile image"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Buttons Container -->
        <!-- Contains two buttons (Find Trucks and Find Cargo) aligned horizontally.
             Spacing and alignment provide a user-friendly interface for navigation. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Button: Find Trucks -->
            <!-- Navigates to the Find Trucks screen.
                 The layout weight ensures equal spacing with the "Find Cargo" button. -->
            <Button
                android:id="@+id/find_trucks_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Find Trucks"
                android:padding="16dp"
                android:layout_marginEnd="8dp" />

            <!-- Button: Find Cargo -->
            <!-- Will eventually navigate to the Find Cargo screen.
                 A placeholder for future functionality. -->
            <Button
                android:id="@+id/find_cargo_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Find Cargo"
                android:padding="16dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
