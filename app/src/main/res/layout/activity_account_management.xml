<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truck_background">

    <!-- Centered vertical layout container for managing user account operations -->
    <LinearLayout
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="352dp"
        android:layout_height="534dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Input field for entering a proper name -->
        <EditText
            android:id="@+id/proper_name_input"
            android:layout_width="321dp"
            android:layout_height="69dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter Proper Name" />

        <!-- Button for submitting the proper name -->
        <Button
            android:id="@+id/add_name_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Add Proper Name" />

        <!-- Input field for entering a new password -->
        <EditText
            android:id="@+id/new_password_input"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter New Password"
            android:inputType="textPassword" />

        <!-- Button for changing the user's password -->
        <Button
            android:id="@+id/change_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Change Password" />

        <!-- Button for deleting the user's account -->
        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Delete Account" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>