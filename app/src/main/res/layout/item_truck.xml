<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Truck Name TextView -->
    <!-- Displays the name of the truck. It is bold, slightly larger in size,
         and centered horizontally. Positioned at the top of the layout. -->
    <TextView
        android:id="@+id/truck_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Truck Location TextView -->
    <!-- Displays the location name or address of the truck.
         Positioned directly below the truck name. Centered horizontally. -->
    <TextView
        android:id="@+id/truck_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/truck_name" />

    <!-- Truck Coordinates TextView -->
    <!-- Displays the latitude and longitude of the truck.
         Positioned below the truck name for visual alignment. Centered horizontally. -->
    <TextView
        android:id="@+id/truck_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/truck_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
